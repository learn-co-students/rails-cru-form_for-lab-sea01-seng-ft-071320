<h1>New Song</h2><br>

<% if @song.errors.any? %>
  <ul>
    <% @song.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :genre_id %>
  <%= f.text_field :genre_id %><br>

  <%= f.label :artist_id %>
  <%= f.text_field :artist_id %><br>

  <%= f.submit %>
<% end %>